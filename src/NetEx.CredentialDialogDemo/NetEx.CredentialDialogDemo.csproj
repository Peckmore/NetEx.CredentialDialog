<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net20;net8.0-windows</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>8.0</LangVersion>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <RootNamespace>NetEx.CredentialDialogDemo</RootNamespace>
    <AssemblyName>CredentialDialogDemo</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NetEx.Windows.Forms.CredentialDialog\NetEx.Windows.Forms.CredentialDialog.csproj" />
  </ItemGroup>
    
  <ItemGroup Condition="$(TargetFramework.ToLower().Contains('net20'))">
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

</Project>